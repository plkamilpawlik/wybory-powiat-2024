---
import { Icon } from "astro-icon/components";
---

<aside id="headerComponentFixture" class="h-16 w-full bg-[#1f3584]"></aside>

<header id="headerComponent" class="fixed top-0 h-16 w-full duration-300 ease-in-out">
	<section class="navbar gap-2">
		<a href="/" class="btn btn-ghost text-white">
			<Icon class="text-3xl" name="mdi:vote" />
			<h4 class="text-2xl font-bold">Kamil Pawlik 2024</h4>
		</a>
		<nav class="flex gap-2">
			<a href="/about" class="btn btn-ghost text-lg text-white">O mnie</a>
			<a href="/program" class="btn btn-ghost text-lg text-white">Program</a>
			<a href="/contact" class="btn btn-ghost text-lg text-white">Kontakt</a>
		</nav>
	</section>
</header>

<script>
	const headerComponent = document.querySelector("#headerComponent");

	document.addEventListener("scroll", () => {
		if (document.body.getBoundingClientRect().y >= 0) {
			headerComponent?.classList.remove("backdrop-blur-md", "bg-opacity-60", "shadow-xl");
		} else {
			headerComponent?.classList.add("backdrop-blur-md", "bg-opacity-60", "shadow-xl");
		}
	});
</script>
