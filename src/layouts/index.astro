---
import FooterComponent from "@/components/footer.astro";
import HeaderComponent from "@/components/header.astro";

interface Props {
	pageTitle: string;
}
---

<html lang="pl" data-theme="light" class="scroll-smooth">
	<head>
		<link rel="icon" href="/favicon.svg" type="image/svg+xml" />
		<meta charset="utf-8" />
		<meta name="generator" content={Astro.generator} />
		<meta
			name="viewport"
			content="initial-scale=1, viewport-fit=cover, width=device-width"
		/>
		<title>{Astro.props.pageTitle}</title>
		<style>
			html {
				-ms-overflow-style: none;
				scrollbar-width: none;
			}

			html::-webkit-scrollbar {
				display:;
			}
		</style>
	</head>
	<body class="overflow-y-scroll">
		<HeaderComponent />
		<main class="mb-16 min-h-screen">
			<slot />
		</main>
		<FooterComponent />
	</body>
</html>
