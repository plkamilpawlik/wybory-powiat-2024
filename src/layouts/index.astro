---
import FooterComponent from "@/components/footer.astro";
import HeaderComponent from "@/components/header.astro";
import "aos/dist/aos.css";

interface Props {
	pageTitle: string;
}
---

<html lang="pl" data-theme="light" class="scroll-smooth">
	<head>
		<link rel="icon" href="/favicon.svg" type="image/svg+xml" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Courgette&family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
			rel="stylesheet"
		/>
		<meta charset="utf-8" />
		<meta name="generator" content={Astro.generator} />
		<meta name="theme-color" content="#1f3584" />
		<meta
			name="viewport"
			content="initial-scale=1, maximum-scale=1.0, user-scalable=0, width=device-width, viewport-fit=cover"
		/>

		<!-- social media -->
		<meta
			property="og:image"
			content="https://kamilpawlik.netlify.app/images/web.share.png"
		/>
		<meta property="og:title" content="Kamil Pawlik 2024" />
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://https://kamilpawlik.netlify.app/" />

		<!-- twitter / x -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta
			name="twitter:description"
			content="Kandydat do rady powiatu raciborskiego | okrÄ™g 1 miejsce 6"
		/>
		<meta
			name="twitter:image"
			content="https://kamilpawlik.netlify.app/images/web.share.png"
		/>
		<meta name="twitter:title" content="Kamil Pawlik 2024" />

		<title>{Astro.props.pageTitle}</title>
		<style>
			html {
				-ms-overflow-style: none;
				scrollbar-width: none;
				font-family: "Montserrat", sans-serif;
				font-optical-sizing: auto;
				font-style: normal;
			}

			html::-webkit-scrollbar {
				display:;
			}
		</style>
	</head>
	<body>
		<HeaderComponent />
		<slot />
		<FooterComponent />
		<script>
			import { initAOS } from "@/scripts/aos";

			initAOS();
		</script>
	</body>
</html>
